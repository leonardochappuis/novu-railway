FROM ghcr.io/novuhq/novu/web:0.19.0

ARG REACT_APP_API_URL
ARG REACT_APP_ENVIRONMENT
ARG REACT_APP_WIDGET_EMBED_PATH
ARG REACT_APP_DOCKER_HOSTED_ENV
ARG REACT_APP_WS_URL

ENV REACT_APP_API_URL=${API_ROOT_URL}
